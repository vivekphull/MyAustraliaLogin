<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:divider="@drawable/divider"
    android:showDividers="middle"
    android:dividerPadding="30dp">

    <RelativeLayout
        android:id="@+id/imageViewReportDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:padding="@dimen/place_autocomplete_button_padding">
        <ImageView
            android:id="@+id/imageReportDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:minWidth="40dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingStart="@dimen/tw__composer_avatar_size"
        android:paddingEnd="@dimen/tw__composer_avatar_size">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@mipmap/ic_pin_drop_black_24dp"/>
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/addressTextReportDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:gravity="center|left"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:paddingStart="@dimen/tw__composer_avatar_size" />
            <TextView
                android:id="@+id/locationTextReportDetail"
                android:layout_width="match_parent"
                android:text="Location"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:paddingEnd="@dimen/place_autocomplete_powered_by_google_height"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:paddingStart="@dimen/tw__composer_avatar_size"
        android:paddingEnd="@dimen/tw__composer_avatar_size">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@mipmap/ic_label_black_24dp"/>
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tagTextReportDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tag"
                android:gravity="center|left"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:paddingStart="@dimen/tw__composer_avatar_size" />
            <TextView
                android:id="@+id/descriptionTextReportDetail"
                android:layout_width="match_parent"
                android:text="Description"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:paddingEnd="@dimen/place_autocomplete_powered_by_google_height"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/reporterImageReportDetail"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
            android:padding="24dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/reporterTextReportDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:text="Reporter"/>
            <TextView
                android:id="@+id/scoreTextReportDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:gravity="end"
                android:paddingEnd="@dimen/tw__composer_avatar_size"
                android:text="Score: 120"/>
            <TextView
                android:id="@+id/countTextReportDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Small"
                android:gravity="end"
                android:paddingEnd="@dimen/tw__composer_avatar_size"
                android:text="Score: 120"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>